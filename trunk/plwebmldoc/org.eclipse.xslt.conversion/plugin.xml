<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>

   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            label="Conversion Action Set"
            visible="true"
            id="org.eclipse.xslt.conversion.actionSet">
         <menu
               label="&amp;WebMLDoc"
               id="conversionMenu">
            <separator
                  name="conversionGroup">
            </separator>
         </menu>
         <action
               label="&amp;XSLT conversion from WebML"
               icon="icons/sample.gif"
               class="org.eclipse.xslt.conversion.actions.ConversionAction"
               tooltip="XSLT conversion from WebML"
               menubarPath="conversionMenu/conversionGroup"
               toolbarPath="conversionGroup"
               id="org.eclipse.xslt.conversion.actions.ConversionAction">
         </action>
         <action
               class="org.eclipse.xslt.conversion.actions.ConversionAction"
               icon="icons/sample.gif"
               id="org.eclipse.xslt.conversion.check"
               label="&amp;Check Documentation"
               menubarPath="conversionMenu/conversionGroup">
         </action>
         <action
               class="org.eclipse.xslt.conversion.actions.ConversionAction"
               icon="icons/sample.gif"
               id="org.eclipse.xslt.conversion.openeditor"
               label="&amp;Open Binding Editor"
               menubarPath="conversionMenu/conversionGroup">
         </action>
      </actionSet>
   </extension>

</plugin>
