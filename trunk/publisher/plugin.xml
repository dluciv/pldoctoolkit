<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         point="org.eclipse.ui.newWizards">
      <category
            id="pldoctoolkit"
            name="Product-Line Documentation"/>
      <wizard
            category="pldoctoolkit"
            class="org.spbu.pldoctoolkit.wizards.NewFamilyWizard"
            icon="icons/sample.gif"
            id="org.spbu.pldoctoolkit.wizards.NewFamilyWizard"
            name="Documentation Family"/>
      <wizard
            category="pldoctoolkit"
            class="org.spbu.pldoctoolkit.wizards.NewDocumentWizard"
            icon="icons/sample.gif"
            id="org.spbu.pldoctoolkit.wizards.NewDocumentWizard"
            name="Final Document"/>
      <wizard
            category="pldoctoolkit"
            class="org.spbu.pldoctoolkit.wizards.NewPartWizard"
            icon="icons/sample.gif"
            id="org.spbu.pldoctoolkit.wizards.NewPartWizard"
            name="Part"/>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="org.spbu.pldoctoolkit.editors.DRLEditor"
            contributorClass="org.spbu.pldoctoolkit.editors.DrlEditorActionContributor"
            extensions="drl"
            icon="icons/sample.gif"
            id="org.spbu.pldoctoolkit.editors.DRLEditor"
            name="DRL Editor"/>
   </extension>

</plugin>
